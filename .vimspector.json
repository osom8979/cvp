{
    "configurations": {
        "player": {
            "adapter": "debugpy",
            "filetypes": ["python"],
            "default": true,
            "configuration": {
                "request": "launch",
                "type": "python",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "cwd": "${workspaceRoot}",
                "python": "${workspaceRoot}/python",
                "program": "${workspaceRoot}/main.py",
                "env": {
                    "PYTHONPATH": "${workspaceRoot}"
                },
                "args": ["-D", "player"]
            },
            "breakpoints": {
                "exception": {
                    "raised": "N",
                    "uncaught": "Y",
                    "userUnhandled": "N"
                }
            }
        }
    }
}
